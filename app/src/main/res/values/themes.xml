<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyTracking" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="EditTextBottomLine" parent="Theme.CurrencyTracking">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="colorControlHighlight">@color/purple_500</item>
    </style>

</resources>